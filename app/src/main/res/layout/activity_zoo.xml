<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theomen"
    tools:context="com.example.dumisile.tourguide.zoo">

    <LinearLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">


        <ImageView

            android:id="@+id/gold"
            android:layout_width="371dp"
            android:layout_height="150dp"
            android:paddingBottom="15dp"
            android:paddingTop="20dp"
            android:src="@drawable/zoologo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="#FFA500"
            android:paddingBottom="19dp"/>

        <TextView
            android:id="@+id/name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Family-friend restaurant chain with a rustic feel, a South African wine cellar and a grill menu.
        Dros Restaurant Johannesburg, Opens until 22:00."
            android:textSize="14dp"
            android:paddingBottom="15dp"
            android:textColor="#DAA520"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="334dp"
            android:layout_height="240dp"
            android:layout_margin="15dp"
            app:srcCompat="@drawable/zooone"
            android:layout_weight="0.66" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="300dp"
            android:layout_height="240dp"
            android:layout_margin="15dp"
            app:srcCompat="@drawable/zoology" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="300dp"
            android:layout_height="240dp"
            android:layout_margin="15dp"
            app:srcCompat="@drawable/zoo" />
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#FFA500"/>

    </LinearLayout>


</ScrollView>
