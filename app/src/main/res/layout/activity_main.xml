<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dumisile.tourguide.MainActivity"
    android:background="@drawable/jhbmain"
    android:alpha="0.8">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:weightSum="1"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3">


    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.56"
        android:text="WELCOMES YOU..."
        android:textSize="40dp"
        android:textColor="#FFA500"
        android:layout_marginBottom="53dp"
        android:layout_above="@+id/btndiscover"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:id="@+id/btndiscover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="         DISCOVER THE MAGIC         "
        android:layout_marginBottom="32dp"
        android:background="#FFA500"
        android:drawableTop="@drawable/ic_link_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.56"
        android:text="         THE CITY OF GOLD"
        android:textColor="#FFA500"
        android:textSize="24dp"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btndiscover"
        android:layout_alignEnd="@+id/btndiscover" />


</RelativeLayout>
