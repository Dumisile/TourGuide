<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theomen"
    tools:context="com.example.dumisile.tourguide.restaurants">
    <LinearLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">


        <ImageView

            android:id="@+id/dros"
            android:layout_width="371dp"
            android:layout_height="150dp"
            android:paddingBottom="15dp"
            android:paddingTop="20dp"
            android:src="@drawable/droslogo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#DAA520"
            android:paddingBottom="19dp"/>

        <TextView
            android:id="@+id/name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Family-friend restaurant chain with a rustic feel, a South African wine cellar and a grill menu.
            Dros Restaurant Johannesburg, Opens until 22:00."
            android:textSize="14dp"
            android:paddingBottom="15dp"
            android:textColor="#DAA520"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="334dp"
            android:layout_height="240dp"
            android:layout_margin="15dp"
            app:srcCompat="@drawable/drossetup"
            android:layout_weight="0.66" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="300dp"
            android:layout_height="240dp"
            android:layout_margin="15dp"
            app:srcCompat="@drawable/drosfood" />
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#DAA520"/>


        <ImageView

            android:id="@+id/mash"
            android:layout_width="300dp"
            android:paddingTop="20dp"
            android:paddingBottom="15dp"
            android:layout_height="200dp"
            android:src="@drawable/mashlogo" />

        <TextView
            android:id="@+id/name3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Craving for South African Braaied and juicy meat? Mash Braai house is the place to be.
Mash Braii House Johannesburg Opens until 23.00."
            android:textSize="14dp"
            android:textColor="#FF4500"
            android:textStyle="bold"/>

        ]  <ImageView
        android:id="@+id/imageView8"
        android:layout_width="334dp"
        android:layout_height="240dp"
        android:layout_margin="15dp"
        app:srcCompat="@drawable/mashfood"
        android:layout_weight="0.66" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="300dp"
            android:layout_height="240dp"
            android:layout_margin="15dp"
            app:srcCompat="@drawable/mashfooood" />
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#DAA520"/>




        <ImageView

            android:id="@+id/piatto"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:paddingTop="20dp"
            android:paddingBottom="15dp"
            android:src="@drawable/piattologo"/>

        <TextView
            android:id="@+id/name4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Italian chain restaurant with an electric menu including grills, seafood platters and burgers.
            Piatto Restaurant Johannesburg Opens until 23.00."
            android:textSize="14dp"
            android:textColor="#FF0000"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="334dp"
            android:layout_height="240dp"
            android:layout_margin="15dp"
            app:srcCompat="@drawable/drossetup"
            android:layout_weight="0.66" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="300dp"
            android:layout_height="240dp"
            android:layout_margin="15dp"
            app:srcCompat="@drawable/piattofood" />
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#DAA520"/>


    </LinearLayout>

</ScrollView>
